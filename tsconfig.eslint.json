{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "demo/**/*.js",
    "features/**/*.ts",
    "scripts/**/*.mjs",
    "src/**/*.d.ts",
    "demo/**/*.d.ts",
    "test/**/*.mjs",
    "./*.json",
    "./*.js",
    ".eslintrc.js"
  ],
  "exclude": ["demo/**/*.js"]
}
